@using Courier.Controllers
@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Courier</title>

        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <link rel="stylesheet" href="~/css/sweetalert2.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <section class="vh-100">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-12 col-xl-11">
                        <div class="card text-black" style="border-radius: 25px;">
                            <div class="card-body">
                                <div>
                                    <img title="courier" class="img-margin" src="~/img/courier.png" />
                                </div>
                                <form class="m-3 p-3" asp-controller="Login" asp-action="RegistrarUsuario" method="post">
                                    <div class="mb-4">
                                        <label class="form-label" for="cedula">Cedula</label>
                                        <div>
                                            <input asp-for="Cedula" type="text" id="cedula" class="form-control" required />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <label class="form-label" for="nombre">Nombre</label>
                                            <div>
                                                <input asp-for="Nombre" type="text" id="nombre" class="form-control" required />
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-4">
                                            <label class="form-label" for="apellido">Apellido</label>
                                            <div>
                                                <input asp-for="Apellido" type="text" id="apellido" class="form-control" required />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-4">

                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <label class="form-label" for="telefono">Telefono</label>
                                            <div>
                                                <input asp-for="Telefono" type="tel" id="telefono" class="form-control" required />
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-4">
                                            <label class="form-label" for="celular">Celular</label>
                                            <div>
                                                <input asp-for="Celular" type="tel" id="celular" class="form-control" required />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <label class="form-label" for="correo">Correo</label>
                                            <div>
                                                <input asp-for="Correo" type="email" id="correo" class="form-control" required />
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-4">
                                            <label class="form-label" for="sexo">Genero</label>
                                            <div>
                                                <select asp-for="Sexo" id="sexo" class="form-select" required>
                                                    <option value="" selected disabled>Genero</option>
                                                    <option value="M">Masculino</option>
                                                    <option value="F">Femenino</option>
                                                    <option value="O">Otro</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <label class="form-label" for="password">Password</label>
                                            <div>
                                                <input asp-for="Password" type="password" id="password" class="form-control" required />
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-4">
                                            <label class="form-label" for="confpassword">Repetir password</label>
                                            <div>
                                                <input name="confirmPassword" type="password" id="confpassword" class="form-control" required />
                                            </div>
                                        </div>
                                    </div>

                                    <div>
                                        <button type="submit" class="btn btn-primary">Registrar</button>
                                        <a asp-controller="Home" asp-action="Index" type="button" class="btn btn-danger">Cancelar</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <script>
            const tipo = '@TempData["Tipo"]';
            const titulo = '@TempData["Titulo"]';
            const mensaje = '@TempData["Mensaje"]';
        </script>
        <script src="~/js/sweetalert2.min.js" asp-append-version="true"></script>
        <script src="~/js/alerts.js"></script>
    </body>

</html>
